@using Restaurants.Models;

<h1>Restaurant List</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no Restaurants in your list!</p>
}
@if(Model.Count != 0)
{
  @foreach (Restaurant restaurant in Model)
  {
    <li><a href='/restaurants/@restaurant.GetId()'>@restaurant.GetName()</a></li>
  }
}

</ul>
<a  href="/restaurants/new">Add a new Restaurant.</a>

<form action="/restaurants/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>
